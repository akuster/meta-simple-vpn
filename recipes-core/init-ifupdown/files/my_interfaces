auto eth0
iface eth0 inet static
	address 192.168.18.40
	netmask 255.255.255.00
	gateway 192.168.18.1
        network 192.168.18.0
	dns-nameservers IP_DNS_NAMESERVERS
	dns-search IP_DNS_SEARCH

